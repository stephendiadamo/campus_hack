<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="20dp"
            android:contentDescription="@string/email"
            android:src="@drawable/ic_email_white_36dp" />

        <ImageView
            android:id="@+id/phone_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="20dp"
            android:contentDescription="@string/email"
            android:src="@drawable/ic_phone_white_36dp" />

        <ImageView
            android:id="@+id/contacts_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="20dp"
            android:contentDescription="@string/email"
            android:src="@drawable/ic_contacts_white_36dp" />

        <ImageView
            android:id="@+id/calendar_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="20dp"
            android:contentDescription="@string/email"
            android:src="@drawable/ic_date_range_white_36dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="20dp"
            android:contentDescription="@string/email"
            android:src="@drawable/ic_textsms_white_36dp" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="20dp"
            android:contentDescription="@string/email"
            android:src="@drawable/ic_insert_photo_white_36dp" />

    </LinearLayout>

</LinearLayout>